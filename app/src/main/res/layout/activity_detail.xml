<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.example.android.leonardo_1202154152_modul3.DetailActivity">
        <TextView
            android:id="@+id/judul"
            android:textSize="24dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Judul"
            android:padding="16dp"/>

        <TextView
            android:id="@+id/dummyTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/judul"
            android:text="@string/dummy_text"/>

        <ImageView
            android:id="@+id/airLevel"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_below="@+id/dummyTxt"
            android:src="@drawable/level"
            android:layout_marginTop="20dp"
            android:layout_centerInParent="true"/>

        <Button
            android:id="@+id/btnPlus"
            android:layout_below="@id/airLevel"
            android:layout_toEndOf="@+id/airLevel"
            android:layout_toRightOf="@id/airLevel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+"
            android:onClick="addLevel"
            android:textSize="24sp"/>

        <TextView
            android:id="@+id/airIndicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textSize="20dp"
            android:layout_below="@id/airLevel"
            android:layout_centerHorizontal="true"
            android:text="1L" />

        <Button
            android:id="@+id/btnMinus"
            android:text="-"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/airLevel"
            android:layout_toLeftOf="@id/airLevel"
            android:onClick="decreaseLevel"
            android:textSize="24sp"/>

    </RelativeLayout>
</ScrollView>